<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	
	<extension point="org.eclipse.ui.perspectives">
		<perspective	
			name="Jtester"
      		id="plugin.ui.perspective.JtesterPerspective"
      		class="plugin.ui.perspective.JtesterPerspective">
      </perspective>
	</extension>
	
	<extension point="org.eclipse.ui.views">
		<category
			name="Jtester"
			id="ui.views">
		</category>

		<view
			name="Data FLow Analysis"
			id="plugin.ui.view.data_flow.DataFlowView"
			category="ui.views"
			class="plugin.ui.view.data_flow.DataFlowView">
		</view>	
	</extension>
	
	 <extension point="org.eclipse.ui.actionSets">
	 	<actionSet 
	 		label="SA Action Set"
	 		visible="true"
	 		id="plugin.ui.actionset">
	 		<menu
	 			label="Jtester"
	 			id="plugin.ui.actionset.entry">
	 			<separator
	 				name="entry">
	 			</separator>
	 		</menu>
	 		<menu
            	path="plugin.ui.actionset.entry/entry"
            	label="Test Using..."
            	id="plugin.ui.actionset.select">
            	<separator
            		name="select">
            	</separator>
            </menu>
            
            <action
            	label="Test Configuration"
            	class="plugin.run.Jtester"
            	id="plugin.run.configuration"
            	path="plugin.ui.actionset.entry/entry"
            	menubarPath="plugin.ui.actionset.entry/entry">
            </action>
            
            <menu
            	path="plugin.ui.actionset.entry/plugin.ui.actionset.select/select"
            	label="builtin"
            	id="plugin.ui.actionset.builtin">
            	<separator
            		name="builtin">
            	</separator>
            </menu>
            
            <action
               label="all..."
               class="plugin.run.Jtester"
               menubarPath="plugin.ui.actionset.entry/plugin.ui.actionset.select/select"
               enablesFor="1"
               id="plugin.run.all">
         	</action>
            
	 	</actionSet>
	 </extension>
</plugin>
